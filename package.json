{
  "name": "web3-toy",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "generate-types": "typechain --target=truffle-v5 'build/contracts/*.json'",
    "tsc-migrate": "tsc -p ./tsconfig.migrate.json --outDir ./migrations",
    "contracts-json": "mkdir -p ./artifacts && cp ./build/contracts/*.json ./artifacts",
    "premigrate": "npm run tsc-migrate",
    "migrate": "truffle migrate",
    "postmigrate": "npm run contracts-json",
    "premigrate-goerli": "npm run tsc-migrate",
    "migrate-goerli": "truffle migrate --network goerli",
    "postmigrate-goerli": "npm run contracts-json",
    "typecheck": "truffle compile && npm run generate-types && tsc --noEmit",
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "test": "env TS_NODE_COMPILER_OPTIONS='{\"module\": \"commonjs\" }' mocha -r ts-node/register 'test/*.ts'",
    "prepare": "husky install"
  },
  "dependencies": {
    "@ant-design/icons": "^4.8.0",
    "@fireworks-js/react": "^2.10.1",
    "@next/font": "13.1.1",
    "@openzeppelin/contracts": "^4.8.0",
    "@truffle/hdwallet-provider": "^2.1.4",
    "antd": "^5.1.2",
    "next": "13.1.1",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "web3": "^1.8.1"
  },
  "devDependencies": {
    "@typechain/truffle-v5": "^8.0.2",
    "@types/chai": "^4.3.4",
    "@types/mocha": "^10.0.1",
    "@types/node": "^18.11.18",
    "@types/react": "18.0.26",
    "@types/react-dom": "18.0.10",
    "autoprefixer": "^10.4.13",
    "dotenv": "^16.0.3",
    "eslint": "8.30.0",
    "eslint-config-next": "13.1.1",
    "ganache-cli": "^6.12.2",
    "husky": "^8.0.2",
    "lint-staged": "^13.1.0",
    "mocha": "^10.2.0",
    "postcss": "^8.4.20",
    "prettier": "2.8.1",
    "solc": "^0.8.17",
    "tailwindcss": "^3.2.4",
    "truffle": "^5.7.1",
    "ts-node": "^10.9.1",
    "typechain": "^8.1.1",
    "typescript": "^4.9.4"
  },
  "peerDependencies": {
    "web3-core": "^1.8.1",
    "web3-eth-contract": "^1.8.1"
  },
  "lint-staged": {
    "**/*": "prettier --write --ignore-unknown"
  }
}
